@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Lanche>
<br />
<br />

<h2>Relação Geral de Produtos</h2>
<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;&nbsp;Procurar
    </button>
</form>
<br />
<strong>Total de Pedidos : @Model.TotalRecordCount</strong>
<br />
<div>
        <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create"><strong class="btn btn-success">Incluir Novo Produto</strong></a>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 55px"><span><strong>Gerenciar</strong></span></th>
                    @*<th>@Html.DisplayNameFor(model => model.Nome)</th>*@
                    <th>@Html.SortableHeaderFor(model => model.Nome, "Nome")</th>
                    <th>@Html.DisplayNameFor(model => model.DescricaoCurta)</th>
                    <th>@Html.DisplayNameFor(model => model.DescricaoDetalhada)</th>
                    <th>@Html.DisplayNameFor(model => model.Preco)</th>
                    <th>@Html.DisplayNameFor(model => model.ImagemUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.IsLanchePreferido)</th>
                    <th>@Html.DisplayNameFor(model => model.EmEstoque)</th>
                    <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LancheId" style="margin-left: -20px;"><span class="btn btn-primary btn-xs glyphicon glyphicon-pencil"></span></a>
                        <a asp-action="Details" asp-route-id="@item.LancheId" style="margin-right: 3px;"><span class="btn btn-default btn-xs glyphicon glyphicon-equalizer"></span></a>
                        <a asp-action="Delete" asp-route-id="@item.LancheId" style="margin-right: 3px;"><span class="btn btn-danger btn-xs glyphicon glyphicon-trash"></span></a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescricaoCurta)</td>
                    <td>@Html.DisplayFor(modelItem => item.DescricaoDetalhada)</td>
                    <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImagemUrl)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsLanchePreferido)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmEstoque)</td>
                    <td>@Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)</td>
                </tr>
                }
            </tbody>
        </table>

        @*<div>
            <vc:pager paging-list="@Model"></vc:pager>
        </div>*@

    </div>
</div>