@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>
<br />
<br />
<h2>Relação Geral de Pedidos</h2>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;&nbsp;Procurar
    </button>
</form>
<br />
<strong>Total de Pedidos : @Model.TotalRecordCount</strong>
<br />
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create"><strong class="btn btn-success">Criar novo Pedido</strong></a>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 55px"><span><strong style="margin-left: -20px">Gerenciar</strong></span></th>
                    @*<th>@Html.DisplayNameFor(model => model.Nome)</th>*@
                    <th>@Html.SortableHeaderFor(model => model.Nome, "Nome")</th>
                    <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
                    <th>@Html.DisplayNameFor(model => model.Endereco1)</th>
                    <th>@Html.DisplayNameFor(model => model.Endereco2)</th>
                    <th>@Html.DisplayNameFor(model => model.Cep)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoEnviado)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoEntregueEm)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PedidoId" style="margin-left: -85px;"><span class="btn btn-primary btn-xs glyphicon glyphicon-pencil"></span></a>
                        <a asp-action="Details" asp-route-id="@item.PedidoId" style="margin-right: 3px;"><span class="btn btn-default btn-xs glyphicon glyphicon-equalizer"></span></a>
                        <a asp-action="Delete" asp-route-id="@item.PedidoId" style="margin-right: 3px;"><span class="btn btn-danger btn-xs glyphicon glyphicon-trash"></span></a>
                        <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId" style="margin-right: 3px;"><span class="btn btn-secondary btn-xs glyphicon glyphicon-folder-open"></span></a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco2)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cep)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.PedidoEnviado)</td>*@
                    <td>@String.Format("{0:dd/MM/yyyy}", item.PedidoEnviado)</td>
                    <td>@Html.DisplayFor(modelItem => item.PedidoEntregueEm)</td>
                </tr>
                }
            </tbody>
        </table>
        @*<div>
            <vc:pager paging-list="@Model"></vc:pager>
        </div>*@
    </div>
</div>
