@model LanchesMac.ViewModels.PedidoLancheViewModel
@{
    ViewData["Title"] = "PedidoLanches";
    decimal totalPedido = 0;
}

<h1>Lanches do Pedido</h1>
<hr />
<h4>Pedido  :  @Html.DisplayFor(model => @Model.Pedido.PedidoId)</h4>
<h4>Cliente :  @Html.DisplayFor(model => @Model.Pedido.Nome)</h4>
<h4>Data    :  @Html.DisplayFor(model => @Model.Pedido.PedidoEnviado)</h4>
<h4>Entrega :  @Html.DisplayFor(model => @Model.Pedido.PedidoEntregueEm)</h4>

<table class="table">
    @foreach (var item in @Model.Pedido.PedidoItens)
    {

        totalPedido += (@item.Lanche.Preco * @item.Quantidade);
        //totalPedido = @item.Pedido.PedidoTotal;

        <tr>
            <td align="right"><h4>@Html.DisplayFor(modelItem => item.Lanche.Nome)</h4></td>
            <td align="right"><img src="@item.Lanche.ImagemUrl" class="img-fluid" height="70" width="70"></td>
            <td align="right"><h4>@string.Format("{0:C}", item.Lanche.Preco)</h4></td>
            <td align="right"><h4>(@Html.DisplayFor(modelItem => item.Quantidade))</h4></td>
        </tr>
    }
    <tr>
            <td colspan="2">&nbsp;</td>
            <td align="right">
                <h4>Total do Pedido : @string.Format("{0:C}", @totalPedido)</h4>
            </td>
        </tr>
</table>
<a asp-action="Index" class="btn btn-warning btn-md">Retornar</a>

